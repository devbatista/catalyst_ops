<div class="page-wrapper">
  <div class="page-content">
    <div class="row">
      <div class="col-12">
        <h6 class="mb-0 text-uppercase">Clientes</h6>
        <hr />
        <div class="card">
          <div class="card-body">
            <div class="row align-items-center mb-4">
              <div class="col-md-6 d-flex">
                <div class="showing-entries-group flex-shrink-0">
                  <span class="showing-entries-label">Mostrar</span>
                  <form method="get" class="showing-entries-form">
                    <select name="per" class="form-select form-select-sm showing-entries-select" onchange="this.form.submit()">
                      <% [10, 20, 30].each do |n| %>
                      <option value="<%= n %>" <%= params[:per].to_i == n ? 'selected' : '' %>><%= n %></option>
                      <% end %>
                    </select>
                    <input type="hidden" name="q" value="<%= params[:q] %>">
                  </form>
                  <span class="showing-entries-text">registros</span>
                </div>
                <!-- Bloco Search -->
                <form method="get" class="flex-grow-1" style="min-width: 0;">
                  <div class="input-group input-search-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="bx bx-search"></i>
                      </span>
                    </div>
                    <input type="text" name="q" value="<%= params[:q] %>" class="form-control input-search" placeholder="Buscar..." aria-label="Search">
                    <input type="hidden" name="per" value="<%= params[:per] %>">
                  </div>
                </form>
              </div>
              <div class="col-md-6 d-flex justify-content-end">
                <%= link_to raw('<i class="bx bx-plus"></i> Novo cliente'), new_app_client_path,
      class: "btn btn-outline-primary btn-add-new" %>
              </div>
            </div>
            <table class="table mb-0 table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nome</th>
                  <th>Documento</th>
                  <th>Email</th>
                  <th>Telefone</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |client| %>
                <tr>
                  <td><%= client.id %></td>
                  <td><%= client.name %></td>
                  <td><%= client.formatted_document %></td>
                  <td><%= client.email %></td>
                  <td><%= client.formatted_phone %></td>
                  <td>
                    <%= link_to 'Ver', app_client_path(client), class: "btn btn-sm btn-primary" %>
                    <%= link_to 'Editar', edit_app_client_path(client), class: "btn btn-sm btn-warning" %>
                    <% if client.can_be_deleted? %>
                    <%= link_to 'Excluir', app_client_path(client), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger" %>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <div class="text-muted">
                Mostrando <%= @clients.size %> de <%= @clients.total_count %> registros
              </div>
              <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                  <li class="page-item <%= 'disabled' unless @clients.prev_page %>">
                    <%= link_to 'Previous', @clients.prev_page ? url_for(params.permit(:q, :per).merge(page: @clients.prev_page)) : '#', class: "page-link" %>
                  </li>
                  <% 1.upto(@clients.total_pages) do |page| %>
                  <li class="page-item <%= 'active' if page == @clients.current_page %>">
                    <%= link_to page, url_for(params.permit(:q, :per).merge(page: page)), class: "page-link" %>
                  </li>
                  <% end %>
                  <li class="page-item <%= 'disabled' unless @clients.next_page %>">
                    <%= link_to 'Next', @clients.next_page ? url_for(params.permit(:q, :per).merge(page: @clients.next_page)) : '#', class: "page-link" %>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>