<div class="page-wrapper">
  <div class="page-content">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0 text-uppercase">Ordens de Serviço</h4>
          <%= link_to "OS não atribuídas", unassigned_app_order_services_path, class: "btn btn-dark" %>
        </div>

        <% flash.each do |type, message| %>
        <% bootstrap_class = { notice: "alert-success", alert: "alert-danger", error: "alert-danger" }[type.to_sym] || "alert-info" %>
        <div class="alert <%= bootstrap_class %> alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% end %>
        <div class="card">
          <div class="card-body">
            <div class="row align-items-center mb-4">
              <div class="col-md-6 d-flex">
                <div class="showing-entries-group flex-shrink-0">
                  <span class="showing-entries-label">Mostrar</span>
                  <form method="get" class="showing-entries-form">
                    <select name="per" class="form-select form-select-sm showing-entries-select" onchange="this.form.submit()">
                      <% [10, 20, 30].each do |n| %>
                      <option value="<%= n %>" <%= params[:per].to_i == n ? 'selected' : '' %>><%= n %></option>
                      <% end %>
                    </select>
                  </form>
                  <span class="showing-entries-text">registros</span>
                </div>
                <form method="get" class="flex-grow-1" style="min-width: 0;">
                  <div class="input-group input-search-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="bx bx-search"></i>
                      </span>
                    </div>
                    <input type="number" name="code" value="<%= params[:code] %>" class="form-control input-search" placeholder="Código..." aria-label="Search">
                    <input type="hidden" name="per" value="<%= params[:per] %>">
                  </div>
                </form>
              </div>
              <div class="col-md-6 d-flex justify-content-end">
                <%= link_to raw('<i class="bx bx-plus"></i> Nova OS'),
                    new_app_order_service_path,
                    class: "btn btn-outline-primary btn-add-new" %>
              </div>
            </div>
            <table class="table mb-0 table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Código</th>
                  <th>Cliente</th>
                  <th>Status</th>
                  <th>Agendada</th>
                  <th>Técnicos</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @order_services.each do |os| %>
                <tr>
                  <td><%= os.id %></td>
                  <td><%= os.code %></td>
                  <td><%= os.client&.name %></td>
                  <td><%= os.status.humanize %></td>
                  <td><%= l(os.scheduled_at, format: :short) if os.scheduled_at %></td>
                  <td><%= os.assignments.map { |a| a.user.name }.join(", ") %></td>
                  <td>
                    <%= link_to 'Ver', app_order_service_path(os), class: "btn btn-sm btn-primary" %>
                    <%= link_to 'Editar', edit_app_order_service_path(os), class: "btn btn-sm btn-warning" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <div class="text-muted">
                Mostrando <%= @order_services.size %> de <%= @order_services.total_count %> registros
              </div>
              <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                  <li class="page-item <%= 'disabled' unless @order_services.prev_page %>">
                    <%= link_to 'Previous', @order_services.prev_page ? url_for(params.permit(:q, :per).merge(page: @order_services.prev_page)) : '#', class: "page-link" %>
                  </li>
                  <% 1.upto(@order_services.total_pages) do |page| %>
                  <li class="page-item <%= 'active' if page == @order_services.current_page %>">
                    <%= link_to page, url_for(params.permit(:q, :per).merge(page: page)), class: "page-link" %>
                  </li>
                  <% end %>
                  <li class="page-item <%= 'disabled' unless @order_services.next_page %>">
                    <%= link_to 'Next', @order_services.next_page ? url_for(params.permit(:q, :per).merge(page: @order_services.next_page)) : '#', class: "page-link" %>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>