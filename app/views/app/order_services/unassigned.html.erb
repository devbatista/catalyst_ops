<%# filepath: app/views/app/order_services/unassigned.html.erb %>
<div class="page-wrapper">
  <div class="page-content">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0 text-uppercase">Ordens de Serviço Não Atribuídas</h4>
          <%= link_to "Voltar para Todas as OS", app_order_services_path, class: "btn btn-secondary" %>
        </div>

        <% flash.each do |type, message| %>
          <% bootstrap_class = { notice: "alert-success", alert: "alert-danger", error: "alert-danger" }[type.to_sym] || "alert-info" %>
          <div class="alert <%= bootstrap_class %> alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover align-middle">
                <thead>
                  <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Status</th>
                    <th>Data de Criação</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @order_services.any? %>
                    <% @order_services.each do |order_service| %>
                      <tr>
                        <td><%= order_service.code %></td>
                        <td><%= order_service.client.name %></td>
                        <td><%= order_service.status.humanize %></td>
                        <td><%= l(order_service.created_at, format: :short) %></td>
                        <td>
                          <%= link_to "Ver Detalhes", app_order_service_path(order_service), class: "btn btn-sm btn-primary" %>
                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="5" class="text-center">Todas as ordens de serviço estão atribuídas.</td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="mt-3">
              <%= paginate @order_services %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>