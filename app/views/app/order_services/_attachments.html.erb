<%= turbo_frame_tag "attachments_#{order_service.id}" do %>
  <div class="mt-2">
    <strong>Anexos atuais:</strong>
    <ul>
      <% order_service.attachments.each do |attachment| %>
        <li>
          <%= link_to attachment.filename, url_for(attachment), target: "_blank" %>
          <%= link_to "Remover", purge_attachment_app_order_service_path(order_service, attachment_id: attachment.id),
            data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja remover este anexo?" },
            class: "btn btn-sm btn-danger ms-2" %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>