<div class="page-wrapper">
  <div class="page-content">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0 text-uppercase">OS Atrasadas</h4>
          <div class="d-flex gap-2">
            <%= link_to "Voltar para todas as OS", app_order_services_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <!-- filtros iguais aos da index (opcional) -->
            <div class="row align-items-center mb-4">
              <div class="col-12 col-md-6 d-flex flex-column flex-md-row align-items-stretch gap-2">
                <div class="showing-entries-group flex-shrink-0">
                  <span class="showing-entries-label">Mostrar</span>
                  <form method="get" class="showing-entries-form">
                    <select name="per" class="form-select form-select-sm showing-entries-select" onchange="this.form.submit()">
                      <% [10, 20, 30].each do |n| %>
                        <option value="<%= n %>" <%= params[:per].to_i == n ? 'selected' : '' %>><%= n %></option>
                      <% end %>
                    </select>
                  </form>
                  <span class="showing-entries-text">registros</span>
                </div>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table mb-0 table-hover">
                <thead>
                  <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Status</th>
                    <th>Agendada</th>
                    <th>Técnicos</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @order_services.each do |os| %>
                    <tr>
                      <td><%= os.code %></td>
                      <td><%= os.client&.name %></td>
                      <td><%= os.status.humanize %></td>
                      <td><%= l(os.scheduled_at, format: :short) if os.scheduled_at %></td>
                      <td><%= os.assignments.map { |a| a.user.name }.join(", ") %></td>
                      <td>
                        <%= link_to 'Ver', app_order_service_path(os), class: "btn btn-sm btn-primary" %>
                        <%= link_to 'Reagendar', schedule_app_order_service_path(os), class: "btn btn-sm btn-outline-secondary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
              <div class="text-muted">
                Mostrando <%= @order_services.size %> de <%= @order_services.try(:total_count) || @order_services.size %> registros
              </div>
              <nav aria-label="Page navigation">
                <%= custom_paginate(@order_services) if defined?(custom_paginate) %>
              </nav>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>