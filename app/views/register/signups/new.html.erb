<div class="min-vh-100 d-flex align-items-center bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="mb-3">Cadastro CatalystOps</h5>

            <%= form_with url: signups_path, scope: :signup, method: :post, local: true do |f| %>
              <h6 class="mt-3">Dados da Empresa</h6>
              <div class="row">
                <div class="col-md-12">
                  <%= f.fields_for :company do |c| %>
                    <div class="mb-2">
                      <%= c.label :name, "Razão Social" %>
                      <%= c.text_field :name, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :document, "CNPJ/CPF" %>
                      <%= c.text_field :document, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :email %>
                      <%= c.email_field :email, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :phone, "Telefone" %>
                      <%= c.text_field :phone, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :address, "Endereço" %>
                      <%= c.text_area :address, class: "form-control", rows: 3 %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :state_registration, "Inscrição Estadual" %>
                      <%= c.text_field :state_registration, class: "form-control" %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :municipal_registration, "Inscrição Municipal" %>
                      <%= c.text_field :municipal_registration, class: "form-control" %>
                    </div>
                    <div class="mb-2">
                      <%= c.label :website, "Website" %>
                      <%= c.url_field :website, class: "form-control" %>
                    </div>
                  <% end %>
                </div>
              </div>

              <h6 class="mt-3">Usuário Administrador</h6>
              <div class="row">
                <div class="col-md-6">
                  <%= f.fields_for :user do |u| %>
                    <div class="mb-2">
                      <%= u.label :name, "Nome" %>
                      <%= u.text_field :name, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= u.label :email %>
                      <%= u.email_field :email, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= u.label :password, "Senha" %>
                      <%= u.password_field :password, class: "form-control", required: true %>
                    </div>
                    <div class="mb-2">
                      <%= u.label :password_confirmation, "Confirmar Senha" %>
                      <%= u.password_field :password_confirmation, class: "form-control", required: true %>
                    </div>
                  <% end %>
                </div>
              </div>

              <h6 class="mt-3">Formas de Pagamento</h6>
              <div class="mb-3">
                <% ["pix", "credit_card", "boleto"].each do |pm| %>
                  <div class="form-check form-check-inline">
                    <%= f.check_box :payment_methods, { multiple: true, class: "form-check-input", id: "pm_#{pm}" }, pm, nil %>
                    <%= label_tag "pm_#{pm}", pm.humanize, class: "form-check-label" %>
                  </div>
                <% end %>
              </div>

              <div class="mt-3 d-flex justify-content-end">
                <%= f.submit "Continuar", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>