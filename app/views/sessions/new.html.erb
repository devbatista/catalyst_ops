<h2>Entrar no CatalystOps</h2>

<%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do %>
  <%= csrf_meta_tags %>
  <div>
    <%= label_tag :email, "E-mail" %><br>
    <%= email_field_tag :email, params[:email], autofocus: true %>
  </div>
  <div>
    <%= label_tag :password, "Senha" %><br>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Entrar" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>